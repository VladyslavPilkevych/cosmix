{
  "extends": "../../tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.mjs",
    ".next/types/**/*.ts",
    "../../packages/sdk/src/chains/chains.ts",
    "../../packages/sdk/src/cosmos/cosmos.ts",
    "../../packages/sdk/src/cosmos/cosmosTx.ts",
    "../../packages/sdk/src/cosmos/cosmosRegistry.ts",
    "../../packages/sdk/src/prices/prices.ts",
    "../../packages/sdk/src/tokenlists/tokenlist.ts",
    "../../packages/sdk/src/evm/erc20.ts",
    "../../packages/sdk/src/evm/evmTx.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      // "@cosmix/ui/*": ["src/ui/*"],
      // "@cosmix/ui": ["src/ui/index"],
      "@/*": ["./*"]
    }
  }
}
